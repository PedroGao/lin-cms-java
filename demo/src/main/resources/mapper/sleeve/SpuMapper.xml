<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.cms.demo.sleeve.mapper.SpuMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lin.cms.demo.sleeve.model.Spu">
        <id column="id" property="id"/>
        <result column="title" property="title"/>
        <result column="subtitle" property="subtitle"/>
        <result column="category_id" property="categoryId"/>
        <result column="online" property="online"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_time" property="deleteTime"/>
        <!--        <result column="brand_id" property="brandId"/>-->
        <result column="price" property="price"/>
        <result column="sketch_spec_id" property="sketchSpecId"/>
        <result column="default_sku_id" property="defaultSkuId"/>
        <result column="img" property="img"/>
        <result column="discount_price" property="discountPrice"/>
        <result column="description" property="description"/>
        <result column="tags" property="tags"/>
        <result column="is_test" property="isTest"/>
        <result column="root_category_id" property="rootCategoryId"/>
        <result column="spu_theme_img" property="spuThemeImg"/>
        <result column="for_theme_img" property="forThemeImg"/>
    </resultMap>

    <select id="getWithNames" resultType="com.lin.cms.demo.sleeve.model.SpuWithNamesDO">
        select s.*,
        c.name as category_name,
        s1.name as sketch_spec_name,
        s2.title as default_sku_name
        from spu s
        left join category c on s.category_id = c.id
        left join spec_key s1 on s.sketch_spec_id = s1.id
        left join sku s2 on s.default_sku_id = s2.id
        where s.id = #{id} and s.delete_time is null
    </select>

    <select id="getSuggestions" resultType="com.lin.cms.demo.sleeve.model.SuggestionDO">
        select s.id id, s.title name from spu s
        where s.delete_time is null
        <if test="id != null">
            and s.id != #{id}
        </if>
    </select>

    <select id="getSpecKeys" resultType="java.lang.Long">
        select s.spec_key_id from spu_key s where s.spu_id = #{id}
    </select>

</mapper>
