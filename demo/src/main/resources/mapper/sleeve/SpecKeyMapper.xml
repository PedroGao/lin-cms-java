<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.cms.demo.sleeve.mapper.SpecKeyMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lin.cms.demo.sleeve.model.SpecKey">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="unit" property="unit"/>
        <result column="standard" property="standard"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_time" property="deleteTime"/>
        <result column="description" property="description"/>
    </resultMap>

    <select id="getSuggestions" resultType="com.lin.cms.demo.sleeve.model.SpecKeySuggestionDO">
        select s.id id,s.name name from spec_key s
        <choose>
            <!-- 如果 spu_id 不为空 -->
            <when test="spuId != null">
                where s.delete_time is null
                and s.id in
                (select k.spec_key_id from spu_key k where k.spu_id = #{spuId})
            </when>
            <otherwise>
                where s.delete_time is null
                <if test="id != null">
                    and s.id != #{id}
                </if>
            </otherwise>
        </choose>
    </select>

</mapper>
