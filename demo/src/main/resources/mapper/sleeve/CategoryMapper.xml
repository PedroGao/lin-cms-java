<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.cms.demo.sleeve.mapper.CategoryMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lin.cms.demo.sleeve.model.Category">
        <id column="id" property="id"/>
        <result column="name" property="name"/>
        <result column="description" property="description"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="delete_time" property="deleteTime"/>
        <result column="is_root" property="isRoot"/>
        <result column="parent_id" property="parentId"/>
        <result column="img" property="img"/>
        <result column="index" property="index"/>
        <result column="online" property="online"/>
        <result column="level" property="level"/>
    </resultMap>

    <select id="getSuggestions" resultType="com.lin.cms.demo.sleeve.model.CategorySuggestionDO">
        select c.id id,c.name name from category c
        where c.delete_time is null
        and c.is_root = 0
        <if test="id != null">
            and c.id != #{id}
        </if>
    </select>

    <select id="getAllSuggestions" resultType="com.lin.cms.demo.sleeve.model.CategorySuggestionDO">
        select c.id id,c.name name from category c
        where c.delete_time is null
        <if test="id != null">
            and c.id != #{id}
        </if>
    </select>


    <select id="getById" resultType="com.lin.cms.demo.sleeve.model.Category">
        SELECT `id`,
        `name`,
        `description`,
        `img`,
        `index`,
        `online`,
        `level`,
        `create_time`,
        `update_time`,
        `delete_time`,
        `is_root`,
        `parent_id`
        FROM category
        WHERE id = #{id}
        AND delete_time is NULL
    </select>

</mapper>
