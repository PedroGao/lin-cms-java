<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.lin.cms.demo.sleeve.mapper.SpuImgMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.lin.cms.demo.sleeve.model.SpuImg">
        <id column="id" property="id"/>
        <result column="img" property="img"/>
        <result column="spu_id" property="spuId"/>
        <result column="delete_time" property="deleteTime"/>
        <result column="update_time" property="updateTime"/>
        <result column="create_time" property="createTime"/>
    </resultMap>

    <delete id="hardDeleteImgsBySpuId">
        delete from spu_img where spu_img.`spu_id` = #{spuId}
    </delete>

    <select id="getImgsBySpuId" resultType="java.lang.String">
        select s.img from spu_img s where s.spu_id = #{spuId} and s.delete_time is null
    </select>
</mapper>
